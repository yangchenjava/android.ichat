<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_chat_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_bkg_light_gray"
        android:paddingBottom="2dp"
        android:paddingEnd="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_chat_send_photo"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_chat_send_time"
        android:contentDescription="@string/content_description"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_chat_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chat_send_time"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/iv_chat_send_photo"
        android:layout_toStartOf="@id/iv_chat_send_photo"
        android:background="@drawable/selector_send"
        android:clickable="true"
        android:gravity="center_vertical"
        android:maxWidth="200dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_chat_send_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_chat_send"
        android:layout_alignRight="@id/tv_chat_send"
        android:layout_below="@id/tv_chat_send_time"
        android:layout_margin="20dp"
        android:contentDescription="@string/content_description"
        android:scaleType="fitCenter"
        android:src="@drawable/chat_send_voice" />

    <TextView
        android:id="@+id/tv_chat_send_voice_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chat_send_time"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@id/tv_chat_send"
        android:layout_toStartOf="@id/tv_chat_send"
        android:textColor="@color/font_blue"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_chat_send_status"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_below="@id/tv_chat_send_time"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/tv_chat_send_voice_duration"
        android:layout_toStartOf="@id/tv_chat_send_voice_duration"
        android:clickable="true"
        android:contentDescription="@string/content_description"
        android:scaleType="fitCenter"
        android:visibility="gone" />

</RelativeLayout>