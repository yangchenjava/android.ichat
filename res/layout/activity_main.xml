<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="微信"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rg_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/tab_wechat_select" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top|center_horizontal"
                android:text="微信"
                android:textColor="@color/tab_select"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/tab_addressbook_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top|center_horizontal"
                android:text="通讯录"
                android:textColor="@color/tab_normal"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/tab_find_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top|center_horizontal"
                android:text="发现"
                android:textColor="@color/tab_normal"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/tab_me_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="top|center_horizontal"
                android:text="我"
                android:textColor="@color/tab_normal"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rg_tabs"
        android:background="@drawable/dividing_line" />

</RelativeLayout>
