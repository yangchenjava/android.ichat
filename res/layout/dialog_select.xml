<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp" >

    <TextView
        android:id="@+id/tv_dialog_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="18dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingTop="18dp"
        android:textColor="@color/font_green"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividing_line_dialog" />

    <RelativeLayout
        android:id="@+id/rl_dialog_select_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_main"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_dialog_select_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_dialog_select_first"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitCenter"
            android:src="@drawable/checked"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_select_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_dialog" />

    <RelativeLayout
        android:id="@+id/rl_dialog_select_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_main"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_dialog_select_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_dialog_select_second"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/content_description"
            android:scaleType="fitCenter"
            android:src="@drawable/checked"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>